{
    "log": {
        "loglevel": "warning",
        "access": "/var/lib/marzban/access.log",
        "error": "/var/lib/marzban/error.log",
        "dnsLog": true
    },
    "dns": {
        "servers": [
            "tcp+local://1.1.1.1",
            "tcp+local://1.0.0.1"
        ]
    },
    "inbounds": [
        {
            "tag": "reality",
            "port": 443,
            "protocol": "vless",
            "settings": {
                "clients": [],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "raw",
                "security": "reality",
                "realitySettings": {
                    "show": false,
                    "target": 7443,
                    "xver": 2,
                    "serverNames": [
                        "reality.yourdomain.com"
                    ],
                    "privateKey": "YOUR_PRIVATE_KEY",
                    "shortIds": [
                        ""
                    ]
                }
            },
            "sniffing": {
                "enabled": true,
                "destOverride": [
                    "http",
                    "tls",
                    "quic"
                ]
            }
        }
    ],
    "outbounds": [
        {
            "tag": "direct",
            "protocol": "freedom",
            "settings": {}
        },
        {
            "tag": "block",
            "protocol": "blackhole",
            "settings": {}
        },
        {
            "tag": "dns-out",
            "protocol": "dns",
            "settings": {
                "nonIPQuery": "skip"
            }
        }
    ],
    "routing": {
        "domainStrategy": "IPIfNonMatch",
        "rules": [
            {
                "type": "field",
                "outboundTag": "block",
                "ip": [
                    "geoip:private"
                ]
            },
            {
                "type": "field",
                "outboundTag": "block",
                "domain": [
                    "geosite:private"
                ]
            },
            {
                "type": "field",
                "outboundTag": "block",
                "protocol": [
                    "bittorrent"
                ]
            },
            {
                "type": "field",
                "outboundTag": "dns-out",
                "network": "tcp,udp",
                "port": 53
            }
        ]
    }
}